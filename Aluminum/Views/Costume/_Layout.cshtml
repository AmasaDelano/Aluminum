<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/css/bootstrap")
    
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/costumeselector.css?v=@Html.Version()" />

    @Scripts.Render("~/js/bootstrap")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#costume-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Costume")">Costume Explorer</a>
            </div>

            <div class="collapse navbar-collapse" id="costume-navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="@Url.Action("Admin", "Costume")">Editor</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ChangePassword", "Costume")">Change Password</a>
                    </li>
                    <li>
                        <a href="@Url.Action("LogOut", "Costume")">Log Out</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Suggest", "Costume")">Suggest a Costume</a>
                    </li>
                }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
