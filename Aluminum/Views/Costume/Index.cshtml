<!DOCTYPE html>

<html ng-app="costumeselector">
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Costume Selector</title>

    @Styles.Render("~/css/bootstrap")

    <link rel="stylesheet" type="text/css" href="~/Content/Styles/costumeselector.css?v=@Html.Version()" />

    @Scripts.Render("~/js/bootstrap")
    @Scripts.Render("~/js/angular")

    <script src="~/Scripts/costumeselector.js?v=@Html.Version()"></script>
</head>
<body>
    <div class="container">
        <div ng-controller="QuestionController as questions">
            <header>
                <h5 ng-repeat="answer in questions.answered" ng-click="questions.revisitQuestion(answer)" class="notSelectable">
                    {{ answer.answered }} <span class="glyphicon" ng-class="{ 'glyphicon-ok': !!answer.isYes, 'glyphicon-remove': !answer.isYes }"></span>
                </h5>
            </header>
            
            <div ng-show="questions.hasQuestionsLeft()">
                <h3>
                    {{ questions.getCurrentQuestion().question }}
                </h3>
                <input type="button" class="btn btn-lg btn-success" value="Yes!" ng-click="questions.answerCurrentQuestion(true)" />
                <input type="button" class="btn btn-lg btn-danger" value="No, thanks" ng-click="questions.answerCurrentQuestion(false)" />
            </div>
            @*<img src="~/Content/Images/loading.gif" alt="Loading..." ng-show="!questions.hasQuestionsLeft()"/>*@
            <div ng-show="!questions.hasQuestionsLeft()">
                <h1>
                    {{ questions.getBestCostume().name }}
                </h1>
            </div>
        </div>
    </div>
</body>
</html>