<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Color Clock</title>
    @Styles.Render("~/css/bootstrap")
    <style>
        #time {
            font-size: 6em;
            position: absolute;
            bottom: 50px;
            right: 75px;
            display: none;
            /* Not selectable */
            cursor: default;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
</head>
<body>
    <noscript>
        <h1>You need Javascript enabled to view this page.</h1>
    </noscript>
    <h1 id="time"></h1>
    @Scripts.Render("~/js/jquery")
    <script src="~/Scripts/colorclockhsl.js?v=0.1"></script>
</body>
</html>